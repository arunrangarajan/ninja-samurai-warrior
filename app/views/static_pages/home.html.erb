<% provide(:title, "Home") %>
<% if logged_in? && user_good? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <p></p>
      <section class="expense_form">
        <%= render 'shared/expense_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>List of Expenses</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the UrBudget App</h1>

    <h2>
      Your budgeting solution!
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>           